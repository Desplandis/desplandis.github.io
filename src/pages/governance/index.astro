---
import PageLayout from '@layouts/PageLayout.astro';
import Card from '@components/ui/Card.astro';
import { getCollection } from 'astro:content';

const governanceDocs = await getCollection('governance');
const sortedDocs = governanceDocs.sort(
  (a, b) => (a.data.order || 999) - (b.data.order || 999)
);

const docsByCategory = sortedDocs.reduce(
  (acc, doc) => {
    const category = doc.data.category;
    if (!acc[category]) acc[category] = [];
    acc[category].push(doc);
    return acc;
  },
  {} as Record<string, typeof sortedDocs>
);

const categoryLabels: Record<string, string> = {
  overview: 'Overview',
  'decision-making': 'Decision Making',
  membership: 'Membership',
  contribution: 'Contribution',
  funding: 'Funding',
  transparency: 'Transparency',
  legal: 'Legal',
};

// Define category order
const categoryOrder = [
  'overview',
  'decision-making',
  'membership',
  'contribution',
  'funding',
  'transparency',
  'legal',
];

const sortedCategories = Object.entries(docsByCategory).sort(
  ([a], [b]) => categoryOrder.indexOf(a) - categoryOrder.indexOf(b)
);
---

<PageLayout
  title="Governance"
  description="Transparent, community-driven governance for long-term sustainability and collective decision-making."
>
  <div class="governance-page">
    <div class="container">
      <header class="page-header">
        <h1>Governance</h1>
        <p class="page-description">
          iTowns operates as a commons with transparent, community-driven
          governance. Decisions are made collectively, and sustainability is
          prioritized over short-term profits.
        </p>
      </header>

      <div class="governance-content">
        {
          sortedCategories.map(([category, docs]) => (
            <section class="category-section">
              <h2 class="category-title">
                {categoryLabels[category] || category}
              </h2>
              <div class="docs-grid">
                {docs.map((doc) => (
                  <Card href={`/governance/${doc.slug}`}>
                    <h3>{doc.data.title}</h3>
                    <p>{doc.data.summary}</p>
                    <div class="card-footer">
                      {doc.data.status && doc.data.status !== 'current' && (
                        <span class={`status-badge status-${doc.data.status}`}>
                          {doc.data.status}
                        </span>
                      )}
                      <time
                        datetime={doc.data.lastUpdated.toISOString()}
                        class="last-updated"
                      >
                        Updated{' '}
                        {doc.data.lastUpdated.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric',
                        })}
                      </time>
                    </div>
                  </Card>
                ))}
              </div>
            </section>
          ))
        }
      </div>
    </div>
  </div>
</PageLayout>

<style>
  .governance-page {
    padding: var(--space-8) 0;
  }

  .page-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-9);
  }

  .page-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  .category-section {
    margin-bottom: var(--space-9);
  }

  .category-title {
    margin-bottom: var(--space-5);
  }

  .docs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-5);
  }

  .docs-grid h3 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-3);
  }

  .docs-grid p {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
    line-height: var(--leading-relaxed);
  }

  .card-footer {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .status-badge {
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .status-draft {
    background-color: rgba(234, 179, 8, 0.15);
    color: #ca8a04;
  }

  .status-archived {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-tertiary);
  }

  .last-updated {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  @media (max-width: 768px) {
    .docs-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

