---
import PageLayout from '@layouts/PageLayout.astro';
import Container from '@components/ui/Container.astro';
import Badge from '@components/ui/Badge.astro';
import { getCollection } from 'astro:content';
import { formatDate, sortByDateDesc, filterDrafts } from '@utils/dates';
import { calculateReadingTime } from '@utils/content';

export async function getStaticPaths() {
  return [
    { params: { audience: 'developers' } },
    { params: { audience: 'executives' } },
    { params: { audience: 'both' } },
  ];
}

const { audience } = Astro.params;

const allPosts = await getCollection('blog');
const publishedPosts = sortByDateDesc(filterDrafts(allPosts));
const filteredPosts = publishedPosts.filter(
  (post) => post.data.audience === audience
);

const audienceLabels = {
  developers: 'Developers',
  executives: 'Decision-Makers',
  both: 'Everyone',
};

const audienceDescriptions = {
  developers:
    'Technical posts about implementation details, API changes, performance optimizations, and development best practices.',
  executives:
    'Strategic posts about governance, sustainability, organizational value, and long-term roadmap.',
  both: 'Announcements and updates relevant to the entire iTowns community.',
};

const label = audienceLabels[audience as keyof typeof audienceLabels];
const description = audienceDescriptions[audience as keyof typeof audienceDescriptions];

// Get counts for other audiences
const audienceCounts = {
  all: publishedPosts.length,
  developers: publishedPosts.filter((p) => p.data.audience === 'developers').length,
  executives: publishedPosts.filter((p) => p.data.audience === 'executives').length,
  both: publishedPosts.filter((p) => p.data.audience === 'both').length,
};
---

<PageLayout
  title={`Posts for ${label}`}
  description={`Blog posts tailored for ${label.toLowerCase()}. ${description}`}
>
  <div class="audience-page">
    <Container>
      <!-- Header -->
      <header class="page-header">
        <nav class="breadcrumb" aria-label="Breadcrumb">
          <a href="/blog">Blog</a>
          <span aria-hidden="true">â†’</span>
          <span>Audience</span>
        </nav>

        <h1>
          Posts for
          <Badge audience={audience as 'developers' | 'executives' | 'both'} />
        </h1>
        <p class="audience-description">{description}</p>
        <p class="post-count">
          {filteredPosts.length} {filteredPosts.length === 1 ? 'post' : 'posts'}
        </p>
      </header>

      <!-- Audience Filter -->
      <nav class="audience-filter" aria-label="Filter by audience">
        <a
          href="/blog"
          class:list={['filter-option']}
        >
          All ({audienceCounts.all})
        </a>
        <a
          href="/blog/audience/developers"
          class:list={['filter-option', { active: audience === 'developers' }]}
        >
          Developers ({audienceCounts.developers})
        </a>
        <a
          href="/blog/audience/executives"
          class:list={['filter-option', { active: audience === 'executives' }]}
        >
          Decision-Makers ({audienceCounts.executives})
        </a>
        <a
          href="/blog/audience/both"
          class:list={['filter-option', { active: audience === 'both' }]}
        >
          Everyone ({audienceCounts.both})
        </a>
      </nav>

      <!-- Posts -->
      <section class="posts-section" aria-label={`Posts for ${label}`}>
        {
          filteredPosts.length > 0 ? (
            <div class="posts-list">
              {filteredPosts.map((post) => (
                <article class="post-item">
                  <a href={`/blog/${post.slug}`} class="post-link">
                    <div class="post-meta-top">
                      <time datetime={post.data.publishDate.toISOString()}>
                        {formatDate(post.data.publishDate, 'short')}
                      </time>
                      {post.data.featured && (
                        <span class="featured-badge">Featured</span>
                      )}
                    </div>
                    <h2 class="post-title">{post.data.title}</h2>
                    <p class="post-summary">{post.data.summary}</p>
                    <div class="post-footer">
                      <div class="post-tags">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="post-tag">{tag}</span>
                        ))}
                      </div>
                      <span class="reading-time">
                        {calculateReadingTime(post.body)} min read
                      </span>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          ) : (
            <div class="no-posts">
              <p>No posts for this audience yet.</p>
              <p class="no-posts-sub">
                Check back soon or browse{' '}
                <a href="/blog">all posts</a>.
              </p>
            </div>
          )
        }
      </section>
    </Container>
  </div>
</PageLayout>

<style>
  .audience-page {
    padding: var(--space-8) 0 var(--space-9);
  }

  /* Header */
  .page-header {
    margin-bottom: var(--space-6);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-4);
  }

  .breadcrumb a {
    color: var(--color-accent-primary);
  }

  .page-header h1 {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .audience-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin-bottom: var(--space-2);
  }

  .post-count {
    font-size: var(--text-base);
    color: var(--color-text-tertiary);
  }

  /* Audience Filter */
  .audience-filter {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding: var(--space-4);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-8);
  }

  .filter-option {
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .filter-option:hover {
    background-color: var(--color-bg-tertiary);
    text-decoration: none;
  }

  .filter-option.active {
    background-color: var(--color-text-primary);
    color: var(--color-bg-primary);
  }

  /* Posts List */
  .posts-section {
    margin-bottom: var(--space-8);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .post-item {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }

  .post-item:hover {
    border-color: var(--color-accent-primary);
    box-shadow: var(--shadow-sm);
  }

  .post-link {
    display: block;
    padding: var(--space-5);
    text-decoration: none;
    color: inherit;
  }

  .post-link:hover {
    text-decoration: none;
  }

  .post-meta-top {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }

  .featured-badge {
    padding: var(--space-1) var(--space-2);
    background-color: rgba(234, 88, 12, 0.1);
    color: var(--color-warning);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-sm);
  }

  .post-title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-2);
    color: var(--color-text-primary);
  }

  .post-summary {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-3);
  }

  .post-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .post-tags {
    display: flex;
    gap: var(--space-2);
  }

  .post-tag {
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  .reading-time {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }

  /* No Posts */
  .no-posts {
    text-align: center;
    padding: var(--space-8);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
  }

  .no-posts p {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
  }

  .no-posts-sub {
    font-size: var(--text-base);
    color: var(--color-text-tertiary);
  }

  @media (max-width: 768px) {
    .audience-page {
      padding: var(--space-6) 0 var(--space-7);
    }

    .page-header h1 {
      font-size: var(--text-2xl);
    }

    .audience-filter {
      flex-direction: column;
    }

    .post-footer {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

