---
import { getCollection } from 'astro:content';
import ArticleLayout from '@layouts/ArticleLayout.astro';
import { sortByDateDesc, filterDrafts } from '@utils/dates';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const publishedPosts = sortByDateDesc(filterDrafts(posts));

  return publishedPosts.map((post, index) => {
    // Get previous and next posts for navigation
    const prevPost =
      index > 0
        ? { slug: publishedPosts[index - 1].slug, title: publishedPosts[index - 1].data.title }
        : null;
    const nextPost =
      index < publishedPosts.length - 1
        ? { slug: publishedPosts[index + 1].slug, title: publishedPosts[index + 1].data.title }
        : null;

    return {
      params: { slug: post.slug },
      props: { post, prevPost, nextPost },
    };
  });
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();
---

<ArticleLayout
  title={post.data.title}
  summary={post.data.summary}
  publishDate={post.data.publishDate}
  updatedDate={post.data.updatedDate}
  categories={post.data.tags}
  author={post.data.author}
  image={post.data.image}
  imageCaptionTitle={post.data.imageCaptionTitle}
  imageCaptionDescription={post.data.imageCaptionDescription}
  prevPost={prevPost}
  nextPost={nextPost}
>
  <Content />
</ArticleLayout>
