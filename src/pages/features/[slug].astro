---
import { getCollection } from 'astro:content';
import PageLayout from '@layouts/PageLayout.astro';
import Badge from '@components/ui/Badge.astro';
import Card from '@components/ui/Card.astro';

export async function getStaticPaths() {
  const features = await getCollection('features');
  return features.map((feature) => ({
    params: { slug: feature.slug },
    props: { feature },
  }));
}

const { feature } = Astro.props;
const { Content } = await feature.render();

// Get related use cases that reference this feature
const allUseCases = await getCollection('use-cases');
const relatedUseCases = allUseCases.filter(
  (uc) => uc.data.relatedFeatures?.includes(feature.slug) && !uc.data.draft
);

// Get other features in same category
const allFeatures = await getCollection('features');
const sameCategory = allFeatures
  .filter(
    (f) =>
      f.data.category === feature.data.category &&
      f.slug !== feature.slug &&
      !f.data.draft
  )
  .sort((a, b) => (a.data.order || 999) - (b.data.order || 999))
  .slice(0, 3);

const categoryLabels: Record<string, string> = {
  visualization: 'Visualization',
  'data-sources': 'Data Sources',
  interaction: 'Interaction',
  analysis: 'Analysis',
  integration: 'Integration',
  performance: 'Performance',
};
---

<PageLayout title={feature.data.title} description={feature.data.summary}>
  <article class="feature-page">
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/features">Features</a>
        <span aria-hidden="true">→</span>
        <span
          >{categoryLabels[feature.data.category] || feature.data.category}</span
        >
      </nav>

      <!-- Header -->
      <header class="page-header">
        <div class="header-meta">
          <Badge audience={feature.data.audience} />
          <span class="category-tag">
            {categoryLabels[feature.data.category] || feature.data.category}
          </span>
          {
            feature.data.comingSoon && (
              <span class="coming-soon">Coming Soon</span>
            )
          }
        </div>
        <h1>{feature.data.title}</h1>
        <p class="summary">{feature.data.summary}</p>
      </header>

      <!-- Capabilities -->
      {
        feature.data.capabilities && feature.data.capabilities.length > 0 && (
          <section class="capabilities-section">
            <h2>Capabilities</h2>
            <ul class="capabilities-list">
              {feature.data.capabilities.map((cap) => (
                <li>{cap}</li>
              ))}
            </ul>
          </section>
        )
      }

      <!-- Supported Standards -->
      {
        feature.data.supportedStandards &&
          feature.data.supportedStandards.length > 0 && (
            <aside class="standards-section">
              <h2>Supported Standards</h2>
              <div class="standards-list">
                {feature.data.supportedStandards.map((std) => (
                  <span class="standard-tag">{std}</span>
                ))}
              </div>
            </aside>
          )
      }

      <!-- Main Content -->
      <div class="content">
        <Content />
      </div>

      <!-- Documentation Link -->
      {
        feature.data.relatedDocs && (
          <div class="docs-link">
            <a
              href={feature.data.relatedDocs}
              target="_blank"
              rel="noopener noreferrer"
            >
              View Documentation →
            </a>
          </div>
        )
      }

      <!-- Related Use Cases -->
      {
        relatedUseCases.length > 0 && (
          <section class="related-section">
            <h2>Use Cases</h2>
            <p class="section-description">
              See how this feature is applied in real-world scenarios.
            </p>
            <div class="related-grid">
              {relatedUseCases.map((uc) => (
                <Card href={`/use-cases/${uc.slug}`}>
                  <h3>{uc.data.title}</h3>
                  <p>{uc.data.summary}</p>
                </Card>
              ))}
            </div>
          </section>
        )
      }

      <!-- Related Features -->
      {
        sameCategory.length > 0 && (
          <section class="related-section">
            <h2>
              More {categoryLabels[feature.data.category] || feature.data.category}{' '}
              Features
            </h2>
            <div class="related-grid">
              {sameCategory.map((f) => (
                <Card href={`/features/${f.slug}`}>
                  <h3>{f.data.title}</h3>
                  <p>{f.data.summary}</p>
                </Card>
              ))}
            </div>
          </section>
        )
      }

      <!-- Back Link -->
      <div class="back-link">
        <a href="/features">← Back to Features</a>
      </div>
    </div>
  </article>
</PageLayout>

<style>
  .feature-page {
    padding: var(--space-8) 0;
  }

  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  /* Breadcrumb */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-6);
  }

  .breadcrumb a {
    color: var(--color-accent-primary);
  }

  /* Header */
  .page-header {
    max-width: 800px;
    margin-bottom: var(--space-8);
  }

  .header-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .category-tag {
    padding: var(--space-2) var(--space-3);
    background-color: var(--color-accent-light);
    color: var(--color-accent-primary);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: 500;
  }

  .coming-soon {
    padding: var(--space-1) var(--space-2);
    background-color: rgba(234, 179, 8, 0.15);
    color: #ca8a04;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .page-header h1 {
    margin-bottom: var(--space-4);
  }

  .summary {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  /* Capabilities */
  .capabilities-section {
    max-width: 720px;
    margin-bottom: var(--space-8);
  }

  .capabilities-section h2 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
  }

  .capabilities-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .capabilities-list li {
    padding: var(--space-3) var(--space-4);
    padding-left: var(--space-8);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    position: relative;
  }

  .capabilities-list li::before {
    content: '✓';
    position: absolute;
    left: var(--space-3);
    color: var(--color-success);
    font-weight: bold;
  }

  /* Standards */
  .standards-section {
    max-width: 720px;
    padding: var(--space-5);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-8);
  }

  .standards-section h2 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-3);
  }

  .standards-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .standard-tag {
    padding: var(--space-2) var(--space-3);
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: 500;
  }

  /* Content */
  .content {
    max-width: 720px;
    margin-bottom: var(--space-8);
  }

  .content :global(h2) {
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .content :global(h3) {
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: var(--space-4);
  }

  .content :global(li) {
    margin-bottom: var(--space-2);
  }

  .content :global(pre) {
    margin: var(--space-4) 0;
    padding: var(--space-4);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    overflow-x: auto;
  }

  .content :global(code) {
    font-family: var(--font-mono);
  }

  /* Docs Link */
  .docs-link {
    max-width: 720px;
    margin-bottom: var(--space-8);
  }

  .docs-link a {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background-color: var(--color-accent-primary);
    color: white;
    border-radius: var(--radius-md);
    font-weight: 500;
    text-decoration: none;
    transition: background-color var(--transition-fast);
  }

  .docs-link a:hover {
    background-color: var(--color-accent-secondary);
    text-decoration: none;
  }

  /* Related Sections */
  .related-section {
    margin-bottom: var(--space-8);
  }

  .related-section h2 {
    margin-bottom: var(--space-2);
  }

  .section-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-5);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-4);
  }

  .related-grid h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
  }

  .related-grid p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Back Link */
  .back-link {
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  .back-link a {
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
  }

  @media (max-width: 768px) {
    .capabilities-list {
      grid-template-columns: 1fr;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }

    .header-meta {
      gap: var(--space-2);
    }
  }
</style>

